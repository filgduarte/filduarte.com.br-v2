---
const lang = "pt";
const theme = "light";
---

<header id="main-header">
    <div class="bar"></div>
    <div class="container">
        <div id="main-logo">
            <img src="/img/logo.png" alt="Filipe Duarte">
        </div>
        <nav id="main-nav" role="navigation">
            <button id="menu-toggle" role="presentation" aria-expanded="false" aria-controls="main-menu">
                <div class="toggle-icon"></div>
                <div class="toggle-icon"></div>
                <div class="toggle-icon"></div>
            </button>
            <ul id="main-menu">
                <li class="main-menu__item">
                    <a href="/#home">In√≠cio</a>
                </li>
                <li class="main-menu__item">
                    <a href="/#about">Sobre mim</a>
                </li>
                <li class="main-menu__item">
                    <a href="/#work">Meu trabalho</a>
                </li>
                <li class="main-menu__item">
                    <a href="/#testimonials">Depoimentos</a>
                </li>
                <li class="main-menu__item">
                    <a href="/#contact">Contato</a>
                </li>
                <li class="main-menu__item">
                    <a href="#">{lang}</a>
                </li>
                <li class="main-menu__item toggle-theme">
                    <a href="#">{theme}</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<style>
    #main-header {
        position: fixed;
        top: 0;
        width: 100%;
        height: var(--header-height);
        padding: 10px 50px;
        z-index: 9;
    }

    /* #main-header .bar {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
            url("/img/noise-light.png"),
            linear-gradient(to bottom, rgb(var(--_theme-color-background-rgb) / 0.95), rgb(var(--_theme-color-background-rgb) / 0.85), rgb(var(--_theme-color-background-rgb) / 0.5))

    } */

    #main-header .container {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    body.dark-mode #main-logo {
        background: url("/img/logo-inverted.png") no-repeat;
    }

    body.dark-mode #main-logo img {
        opacity: 0;
    }

    #main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    #menu-toggle {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        width: 32px;
        height: 32px;
        border: none;
        background: transparent;
    }

    #menu-toggle div {
        position: absolute;
        width: 20px;
        height: 4px;
        background: var(--color-foreground);
    }

    #menu-toggle div:first-child {
        transform: translateY(-8px);
    }

    #menu-toggle div:last-child {
        transform: translateY(8px);
    }

    #main-menu {
        margin: 0;
        list-style-type: none;
    }

    #main-menu a {
        color: var(--_theme-color-foreground);
    }

    @media (max-width: 767px) {
        #main-menu {
            position: absolute;
            top: 50px;
            right: 0;
            padding: 10px 0;
            background-color: var(--_theme-color-background);
            box-shadow: -5px 5px 15px rgb(var(--_theme-color-foreground-rgb) / 0.05);
            transform: translateX( calc(100% + 20px) );
            transition: transform 500ms ease-in-out;
        }

        #main-menu.active {
            transform: translateX(0);
        }

        #main-menu li {
            padding: 10px 30px;
            text-align:
        }
    }

    @media (min-width: 768px) {
        #menu-toggle {
            display: none;
        }

        #main-menu {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            gap: 20px;
            height: 100%;
            padding: 0 0 1px;
        }

        .main-menu__item {
            display: flex;
            align-items: center;
            position: relative;
        }

        .main-menu__item + .main-menu__item::before {
            content: '';
            display: block;
            position: absolute;
            left: -12px;
            width: 4px;
            height: 4px;
            background-color: var(--_theme-color-secondary);
        }
    }
</style>

<script>
    const themeToggler = document.querySelector('.toggle-theme');
    
    function toggleTheme() {
        document.body.classList.toggle('dark-mode');
        const linkText = document.body.classList.contains('dark-mode') ? 'dark' : 'light';

        themeToggler.querySelector('a').innerHTML = linkText;
    }

    themeToggler.addEventListener('click', toggleTheme);
</script>