---
const { title, slug, tags } = Astro.props;
---

<div class="work-item" style=`--_thumbnail: url(/img/work_${slug}_thumb.webp);`>
    <a href={`/work/${slug}`}>
        <h3>{title}</h3>
        <ul class="tag-list">
            {
                tags.map( tag => (
                    <li class="tag">{tag}</li>
                ))
            }
        </ul>
    </a>
</div>

<style>
    .work-item {
        --_gap: calc(var(--default-spacing) / 10);

        position: relative;
        width: 25%;
        aspect-ratio: 1;
        background-image:
            var(--_theme-noise-background),
            var(--_thumbnail);
        background-size: cover;
    }

    .work-item:nth-child(1),
    .work-item:nth-child(5) {
        transform: translateX(200%);
    }

    .work-item:nth-child(3) {
        transform: translateX(300%);
    }

    .work-item:nth-child(2) {
        transform: translateX(100%);
    }

    .work-item::before {
        content: '';
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        background-image: linear-gradient(135deg, transparent, rgb( var(--_theme-color-accent-rgb) / 0.66 ));
        backdrop-filter: grayscale(100%);
    }

    a {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        position: relative;
        height: 100%;
        padding: calc(var(--default-spacing) / 2);
        color: var(--_theme-color-background);
        background-image:
            var(--_theme-noise-background),
            linear-gradient(to bottom, transparent 33.33%, rgb(var(--_theme-color-foreground-rgb) / 0.75)),
            var(--_thumbnail);
        opacity: 0;
        backdrop-filter: grayscale(100%);
        transition: opacity 500ms;
        z-index: 1;
    }

    a:hover {
        text-decoration: none;
        opacity: 1;
    }

    h3 {
        margin-bottom: var(--_gap);
    }

    .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--_gap);
        padding: 0;
        margin: 0;
        list-style-type: none;
        font-size: 0.75rem;
    }

    .tag {
        padding: 2px var(--_gap);
        color: var(--_theme-color-background);
        background-color: var(--_theme-color-primary);
    }
</style>