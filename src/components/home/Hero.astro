<section id="hero">
    <div class="container grid">
        <h1 class="grid-element-12-col">
            Designer<br>
            & Developer.
        </h1>
        <h2 class="grid-element-4-col">
            Olá, meu nome é Filipe Duarte!<br>
            Eu torno ideias em <strong>designs atraentes</strong> e então transformo esses designs em <strong>sites funcionais e responsivos.</strong>
        </h2>
        <a href="#" class="button button--primary grid-element-3-col">Entre em contato</a>
    </div>
</section>

<style>
    section {
        padding-top: var(--header-height);
        height: 100vh;
    }

    section .container {
        grid-template-rows: 72.5% auto;
        align-items: end;
        height: 100%;
    }

    h1 {
        margin: 0 0 0 -0.6rem;
        font-size: 8rem;
        font-weight: 600;
        line-height: 1;
        letter-spacing: -3px;
    }

    h2 {
        margin: 0 0 -0.35rem;
        max-width: 360px;
        font-size: 1.25rem;
        font-weight: 400;
        line-height: 1.3;
    }

    a {
        --_column-start: 10;
    }
</style>

<script>
    import { gsap } from "gsap";
    import SplitType from "split-type";

    const title = new SplitType('#hero h1', { types: 'lines, words' });
    const subtitle = new SplitType('#hero h2', { types: 'chars' });

    title.lines.forEach(line => {
        const lineWrapper = document.createElement('div');
        lineWrapper.classList.add('line-content');
        line.style.overflow = 'hidden';

        while (line.firstChild) {
            lineWrapper.appendChild(line.firstChild);
        }

        line.appendChild(lineWrapper);
    });

    gsap.from('#hero .line-content', {
        y: '100%',
        duration: 0.5,
        stagger: 0.25,
        onComplete: () => {
            title.lines.forEach(line => {
                line.style.overflow = 'visible';
            })
        }
    });

    gsap.from(subtitle.chars, {
        opacity: 0,
        duration: 0.5,
        stagger: 0.01,
        delay: 0.3
    });
</script>