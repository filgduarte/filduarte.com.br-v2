---
import AnimatedTitle from "../AnimatedTitle.astro";
---

<section id="testimonials">
    <div class="container grid">
        <div class="grid-element-5-col">
            <AnimatedTitle
                level="2"
                animationStagger="0.15"
            >
                Algumas opiniões sinceras de pessoas que confiaram no meu trabalho.
            </AnimatedTitle>
        </div>
        <div class="grid-element-4-col" style="--_column-start: 1">
            <h3>Cláudio Rebelo</h3>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab nemo harum earum. Perspiciatis, perferendis sed quos excepturi ratione, consectetur id est, quisquam ea nobis a reprehenderit natus? Consequatur, facilis maxime?</p>
        </div>
    </div>
</section>

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);
    
    const sectionId = '#testimonials';
</script>